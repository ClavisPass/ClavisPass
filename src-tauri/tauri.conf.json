{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npx expo export --platform web",
    "beforeDevCommand": "npm run web",
    "devPath": "http://localhost:8081",
    "distDir": "../build"
  },
  "package": {
    "productName": "ClavisPass",
    "version": "0.1.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "minimize": true,
        "unminimize": true,
        "startDragging": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "setPosition": true,
        "center": true,
        "setFocus": true
      },
      "shell": {
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "protocol": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/RiciRic/ClavisPass/releases/latest/download/updater.json"
      ],
      "dialog": true,
      "pubkey": "DEIN-PUBLIC-KEY"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "ClavisPass",
        "width": 450,
        "height": 750,
        "decorations": false,
        "transparent": true,
        "center": true,
        "contentProtected": true,
        "maximizable": false
      }
    ]
  }
}
